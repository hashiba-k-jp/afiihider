{
    "manifest_version": 3,
    "name": "Affihider",
    "version": "1.1.0",

    "description": "Affihider",
    "homepage_url": "https://github.com/hashiba-k-jp/afiihider",

    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/search*"
            ],
            "js": [
                "scripts/content.js",
                "scripts/background.js"
            ],
            "$comment": "Why does NOT background.js work?"
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "web_accessible_resources": [
        {
            "resources" : [
                "/*"
            ],
            "matches" : [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "storage",
        "unlimitedStorage",
        "scripting",
        "activeTab",
        "contextMenus",
        "nativeMessaging"
    ],
    "action": {
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}
