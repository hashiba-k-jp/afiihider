{
    "manifest_version": 3,
    "name": "Affihider",
    "version": "1.0.0",

    "description": "Affihider",
    "homepage_url": "https://github.com/hashiba-k-jp/afiihider",

    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/search*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources" : [
                "/*"
            ],
            "matches" : [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}
